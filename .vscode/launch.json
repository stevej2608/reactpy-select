{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "1a usage.py",
      "type": "python",
      "request": "launch",
      "program": "usage.py",
      "justMyCode": false,
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "serverReadyAction": {
        "pattern": "Uvicorn running on\\s+(https?://\\S+)",
        "uriFormat": "%s/",
        "action": "debugWithChrome",
        "killOnServerStop": true
      }
    },

    {
      "name": "2a. PyTest (test_example)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "tests/test_example.py"
      ],
      "cwd": "${workspaceRoot}",
      "env": {},
      "envFile": "${workspaceRoot}/.env",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },

    {
      "name": "3 Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": " http://127.0.0.1:8000",
      "webRoot": "${workspaceFolder}/js/src",
      "sourceMaps": true,
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMapPathOverrides": {

        // I've no idea why this works. The underscore or any other
        // charicter is vital for the breakpoint mapping to correctly.
        // TODO: Try and figure out why.

        "*": "${workspaceFolder}/_/*",
      }
    },

  ]
}