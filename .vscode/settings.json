{
    // Python interpreter - points to hatch test environment
    // If using a different Python version, update the path (e.g., py3.12, py3.13)
    "python.defaultInterpreterPath": ".venv/hatch-test.py3.11/bin/python",

    "python.analysis.diagnosticMode": "workspace",

    // Run pytest with hatch
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "tests"
    ],

}
